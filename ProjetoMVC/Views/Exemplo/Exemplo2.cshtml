    }

    <h3 class="m-3">Olá, @nome</h3>
    <p>Hoje é @DateTime.Now.ToString("dd/MM/yyyy hh:mm")</p>

    @{
        bool mostrarMensagem = true;
        if (mostrarMensagem = true)
        {
            <p>Esta é uma mensagem que entrou no if</p>
        }

        for (int i=1; i <= 10; i++)
        {
            int res = i*8;
            <p>8 x @i = @res</p>
        }
    }
</div>
